@{
    Layout = "rpstyle";
}
    

    <div class="d-flex justify-content-center pt-5">
        <div class="d-flex flex-column gap-4">
            <h1>I am a...</h1>

            <div class="d-flex">
                <a asp-controller="submitrequestforms" asp-action="patient" class="patient-btn text-decoration-none rounded-2 w-100 ">
                    <span class="h6">PATIENT</span>
                </a>
            </div>

            <div class="d-flex">
            <a asp-controller="submitrequestforms" asp-action="familyfriend" class="ff-btn text-decoration-none rounded-2 w-100 ">
                    <span class="h6">FAMILY/FRIEND</span>
                </a>
            </div>

            <div class="d-flex">
            <a asp-controller="submitrequestforms" asp-action="concierge" class="con-btn text-decoration-none rounded-2 w-100 ">
                    <span class="h6">CONCIERGE</span>
                </a>
            </div>

            <div class="d-flex">
            <a asp-controller="submitrequestforms" asp-action="businesspartner" class="busi-btn text-decoration-none rounded-2 w-100 ">
                    <span class="h6">BUSINESS PARTNERS</span>
                </a>
            </div>
        </div>

        <div class="d-flex position-fixed back-btn small">
            <a asp-action="index" class="d-flex text-decoration-none align-items-center border border-0 bg-transparent">
                <div class="d-flex">
                    <img class="back" src="~/images/back.png" alt="">
                </div>
                <span style="color: #00b8e6;">Back</span>
            </a>
        </div>

        <div class="fixed-bottom navbar bg-dark d-flex justify-content-end" id="terms">
            <div class="d-flex text-light fw-normal small p-2 mx-3 footer">
                <span>Terms of Conditions &nbsp;</span><span>|</span><span>&nbsp;&nbsp;Privacy Policy</span>
            </div>
        </div>
    </div>
