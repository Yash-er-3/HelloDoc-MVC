@{
    Layout = "_Layout";
}

@model HelloDoc.Aspnetuser;
<div class="d-flex flex-column justify-content-center align-items-center">

    <div class="d-flex justify-content-around">
        <div class="ms-5">
            <img class="hallodoc-img" src="~/images/hallodoc.png" alt="">
        </div>

        <div id="img-btn">
            <img class="light-1" role="button" src="~/images/light.png" alt="" id="img-mode">
        </div>
    </div>

    <div class="main-1">

        <div>
            <img class="bg" src="~/images/back-1.png" alt="">
        </div>
        <a asp-action="registeredpatient" class="d-flex text-decoration-none align-items-center border border-0 bg-transparent">
            <div class="d-flex">
                <img class="back" src="~/images/back.png" alt="">
            </div>
            <span style="color: #00b8e6;" class="back-txt small">Back</span>
        </a>

        <form asp-action="PatientResetPasswordEmail" asp-controller="Home">

            <h2 class="text-center mt-2">
                Reset Your Password
            </h2>

            <div class="form-floating">
                <input type="email" asp-for="Email" class="form-control shadow-none mt-5 bg-transparent" placeholder="Username">
                <label class="FloatingInput" for="Name">Username</label>
                <div style="top: 25%; position: absolute; right: 3%;">
                    <i class="bi bi-person-circle" role="button"></i>
                </div>
            </div>

            <div class="mt-3">
                <div>
                    <a href="">
                        <button class="btn w-100 border-0 fw-medium"
                                style="background-color: #00b8e6; color: white;" type="submit">
                            Reset Password
                        </button>
                    </a>
                </div>

                <div class="d-flex justify-content-center mt-3">
                    <a asp-action="registeredpatient" class="d-flex align-items-center text-decoration-none">
                        <div class="d-flex">
                            <img class="back" src="~/images/back.png" alt="">
                        </div>
                        <span style="color: #00b8e6;" class="back-txt small">Back To Login</span>
                    </a>

                </div>

            </div>
        </form>
    </div>
    <div class="d-flex flex-row fw-medium small position-absolute" id="terms-1">
        <span>Terms of Conditions &nbsp;</span><span>|</span><span>&nbsp;&nbsp;Privacy Policy</span>
    </div>
</div>