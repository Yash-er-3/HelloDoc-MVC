@model HelloDoc.DataModels.Aspnetuser;

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">


<div class="container-fluid">
    <div class="row p-0 d-flex flex-row">
        <div class="d-flex col-xl-6 col-lg-6 col-md-6">
            <div>
                <img src="/images/11116016_415 - Copy.jpg" class="admin-photo" />

            </div>
        </div>
        <div class="d-flex col-xl-6 col-lg-6 col-md-6 justify-content-center">
            <div class="d-flex flex-column justify-content-around align-items-center main-admin">

                <div class="d-flex">
                    <div>
                        <img class="hallodoc-img" src="~/images/hallodoc.png" alt="">
                    </div>

                    <div id="img-btn">
                        <img class="light-1" role="button" src="~/images/light.png" alt="" id="img-mode">
                    </div>
                </div>

                <div class="d-flex">

                    <form asp-controller="CredentialAdmin" asp-action="Login" method="post">

                        <h2 class="text-center mt-2">
                            Login To Your Account
                        </h2>
                        <div class="position-relative">
                            <div class="form-floating">
                                <input type="email" asp-for="Email" class="form-control shadow-none mt-5 bg-transparent @TempData["EmailStyle"]" placeholder="Email" required/>
                                <label class="FloatingInput" for="Email">Email</label>
                                <span class="text-danger small" >@TempData["Email"]</span>
                            </div>
                            <div style="top: 25%; position: absolute; right: 3%;">
                                <i class="bi bi-person-circle" role="button"></i>
                            </div>
                        </div>


                        <div class="position-relative">
                            <div class="form-floating">
                                <input type="password" asp-for="Passwordhash" class="form-control shadow-none mt-3 bg-transparent @TempData["PassStyle"]"
                                       placeholder="Password" id="pswd" required>
                                <label class="FloatingInput" for="Password">Password</label>
                                <span class="text-danger small"> @TempData["WrongPassword"]</span>

                            </div>
                            <div style="top: 28%; position: absolute; right: 3%;" onclick="hideviewpswd()">
                                <i class="bi bi-eye-fill" role="button" id="eye-icon"></i>
                            </div>
                        </div>

                        <div class="mt-3">
                            <div>
                                <a href="">
                                    <button class="btn w-100 border-0 fw-medium" style="background-color: #00b8e6; color: white;" type="submit">
                                        Log in
                                    </button>
                                </a>
                            </div>

                            <div class="d-flex justify-content-center mt-2 small">
                                <a asp-action="forgotpassword" class="mt-2 text-decoration-none" style="color: #00b8e6;">
                                    Forgot
                                    Password?
                                </a>

                            </div>
                        </div>



                    </form>

                </div>

                <div class="d-flex flex-row fw-medium small" id="terms-1">
                    <span>Terms of Conditions &nbsp;</span><span>|</span><span>&nbsp;&nbsp;Privacy Policy</span>
                </div>




            </div>
        </div>
    </div>
</div>

<script>
    const eyeicon = document.getElementById('eye-icon')
    const password = document.getElementById('pswd')
    function hideviewpswd() {
        if (password.type === "password") {
            eyeicon.classList.replace('bi-eye-fill', 'bi-eye-slash-fill')
            password.type = "text"
        }
        else {
            eyeicon.classList.replace('bi-eye-slash-fill', 'bi-eye-fill')
            password.type = "password"

        }

    }
</script>
