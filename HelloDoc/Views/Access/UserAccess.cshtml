@using Services.ViewModels
@model List<AccessViewModel>
<Partial name="notification" />
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
@{
    Layout = "header_dashboard";
    ViewData["Title"] = "User-Access";
}

<div class="container pb-4 bg-light px-2 px-sm-3 px-md-4 px-lg-5" id="UserAccess-maindiv">
    <div class="d-flex justify-content-between align-items-center w-100 my-3">
        <h4>Account Access</h4>
    </div>
    <div class="container-fluid bg-white shadow">
        <div class="row">
            <div class="table-responsive  my-2">
                <table class="table align-middle">
                    <thead class="bg-light">
                        <tr>
                            <th class="text-center">Account Type</th>
                            <th class="ps-3">Account POC</th>
                            <th>Phone</th>
                            <th>Status</th>
                            <th>Open Request</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="datatable" class="bg-white">
                        @foreach (var item in Model)
                        {
                            <tr>
                                @if (item.Accounttype == 1.ToString())
                                {
                                    <td class="text-center">Admin</td>
                                }
                                else
                                {
                                    <td class="text-center">Physician</td>
                                }
                                <td class="ps-3">@item.Name</td>
                                <td>@item.Phone</td>
                                @if (item.Status == 1)
                                {
                                    <td>Active</td>
                                }
                                else
                                {
                                    <td>InActive</td>
                                }
                                <td>@item.OpenRequest</td>
                                <td class="text-center" style="width:clamp(10rem, 25vw, 11rem)">
                                    @if (item.Accounttype == "1")
                                    {
                                        <button class="btn btn-outline-info editbtn-Admin" value="@item.AdminId" data-id="@item.Accounttype">Edit</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-outline-info editbtn-Physician" value="@item.physicianId" data-id="@item.Accounttype">Edit</button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
<script src="/js/Access/AccessRole.js" asp-append-version="true"></script>

