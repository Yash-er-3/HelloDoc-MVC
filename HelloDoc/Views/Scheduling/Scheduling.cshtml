@using Services.Viewmodels

@model SchedulingViewModel;

@{
    Layout = "header_dashboard";
}
@Html.Partial("notification");


<div >
    <div class="container mt-3" id="scheduling-div">
    <div class="d-flex justify-content-between align-items-center mt-2">
        <h4>Scheduling</h4>
        <a asp-controller="Admin" asp-action="Admindashboard" class="text-decoration-none">
            <span class="back-btn p-2" style="color: #00b8e6;">&lt;Back</span>
        </a>
    </div>

    <div class="mt-3">

        <div class="d-flex justify-content-between">
            <div class="d-flex">
                <select name="regionname" id="schedulingregion" class="form-select shadow-none mt-3">
                    <option class="regionselect" selected value="">All Region</option>

                    @foreach (var item in Model.regions)
                    {
                        <option class="regionselect" value="@item.Regionid" itemid="@item.Regionid">@item.Name</option>

                    }
                </select>
            </div>
            <div class="d-flex">
                <button class="p-2 mx-2 text-white btn-info border-0 shadow-none rounded d-flex align-items-center">
                    <i class="bi bi-plus-square"></i>
                    <span class="d-none d-lg-block ps-2">Providers On Call</span>
                </button>
                <button class="p-2 mx-2 text-white rounded btn-info border-0 shadow-none d-flex align-items-center requestedshifts">
                    <i class="bi bi-plus-square"></i>
                    <span class="d-none d-lg-block ps-2">Shifts For Review</span>
                </button>
                <button class="p-2 ms-2 text-white rounded btn-info border-0 shadow-none d-flex align-items-center" data-bs-toggle="modal" data-bs-target="#addShiftModal">
                    <i class="bi bi-plus-square"></i>
                    <span class="d-none d-lg-block ps-2">Add New Shift</span>
                </button>
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <div class="d-none" id="currentDateValue">
                @DateTime.Now.Date.ToString("MMM dd yyyy")
            </div>
            <div class="h6 mt-3" id="showDate">
                @DateTime.Now.DayOfWeek,
                @DateTime.Now.Date.ToString("MMM dd yyyy")
            </div>

            <div class="mt-1 mb-2">
                <button id="allShiftbtn" value="0" class="shiftfilter btn px-1 border-bottom-active shadow-none">
                    All Shift
                </button>
                <button id="pendingShiftbtn" value="1" class="shiftfilter btn px-1 shadow-none" style="color:rgb(87, 1, 51)">
                    <i class="fa-solid fa-square-full fa-fade pe-1" style="color: #efabd2;"></i>
                    Pending Shift
                </button>
                <button id="activeShiftbtn" value="2" class="shiftfilter btn px-1 shadow-none" style="color:rgb(26, 62, 24)">
                    <i class="fa-solid fa-square-full fa-fade pe-1" style="color: #ABde97;"></i>
                    Approved Shift
                </button>
            </div>
        </div>






        <div class="d-flex justify-content-between mt-3">
            <div class="calbtn">
                <span class="dot bg-info text-center text-white px-2 py-1 me-1" id="prevDateBtn" style="height:27px;width:27px;border-radius:100%;"><i class="fa-solid fa-chevron-left"></i></span>
                <input type="date" id="calendar-hidden" name="test">
                <span>
                    <i class="bi bi-calendar-week" id="calendar-icon-datepicker"></i>
                </span>


                <span class="dot bg-info text-center text-white px-2 py-1 ms-1" id="nextDateBtn" style="height:27px;width:27px;border-radius:100%;"><i class="fa-solid fa-chevron-right"></i></span>
            </div>
            <div class="d-flex">
                <button type="button" onclick="loadSchedulingPartial('_DayWise')" class="btn btn-outline-info removeactive shadow-none" id="Day">Day</button>
                <button type="button" onclick="loadSchedulingPartial('_WeekWise')" class="btn btn-outline-info ms-2 removeactive shadow-none" id="Week">Week</button>
                <button type="button" onclick="loadSchedulingPartial('_MonthWise')" class="btn btn-outline-info ms-2 removeactive shadow-none" id="Month">Month</button>
            </div>
        </div>


        <div class="calander mt-4">
            Partial
        </div>

    </div>



</div>

</div>


@*Add New Shift Modal*@
<div class="modal fade" id="addShiftModal" tabindex="-1" aria-labelledby="addShiftModalLabel1" aria-hidden="true">
    <div class="modal-dialog" style="position:absolute;bottom:50%;left:40%;margin-left:-100px;margin-top:-300px">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h1 class="modal-title fs-5" id="addShiftModal1Label">Create Shift</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="AddShift" asp-controller="Scheduling">
                <div class="modal-body">


                    <div class="form-floating">
                        <select asp-for="regionid" class="form-select physiciandata shadow-none" id="floatingSelect" aria-label="Floating label select example" required>
                            <option value="" selected>Select Region</option>
                            @if (Model.regions != null)
                            {
                                @foreach (var obj in Model.regions)
                                {
                                    <option value="@obj.Regionid">@obj.Name</option>
                                }
                            }
                        </select>
                        <label for="floatingSelect" class="text-info">
                            Region
                        </label>
                    </div>
                    <select asp-for="providerid" class="form-select mt-4 shadow-none" id="physelectschedule" aria-label="Floating label select example" style="height:58px" required>
                        <option value="" selected>Select physician</option>

                    </select>
                    <div class="form-floating mt-3">
                        <input asp-for="shiftdate" type="date" min="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control shadow-none" placeholder="Date" required />
                        <label for="floatingInput">Shift Date</label>
                    </div>
                    <div class="row row-cols-md-2 row-cols-sm-1 row-cols-1 mt-3">
                        <div class="col mb-3 mb-md-0">
                            <div class="form-floating shadow-none">
                                <input asp-for="starttime" type="time" id="addshiftstartdate" class="form-control" placeholder="Date" required />
                                <label for="floatingInput">Start</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-floating shadow-none">
                                <input asp-for="endtime" type="time" id="addshiftenddate" class="form-control" placeholder="Date" required />
                                <label for="floatingInput">End</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-check form-switch mt-2 mb-3 ms-1">
                        <label class="form-check-label" for="flexSwitchCheckDefault">Repeat</label>
                        <input class="form-check-input repeatchk shadow-none" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                    </div>
                    Repeat Days
                    <div class="checkbox mt-2 d-flex flex-wrap">
                        <span class="me-2"><input type="checkbox" value="0" name="repeatdays" class="me-1 disable" disabled /> Every Sunday</span>
                        <span class="me-2"><input type="checkbox" value="1" name="repeatdays" class="me-1 disable" disabled /> Every Monday</span>
                        <span class="me-2"><input type="checkbox" value="2" name="repeatdays" class="me-1 disable" disabled /> Every Tuesday</span>
                        <span class="me-2"><input type="checkbox" value="3" name="repeatdays" class="me-1 disable" disabled /> Every Wednesday</span>
                        <span class="me-2"><input type="checkbox" value="4" name="repeatdays" class="me-1 disable" disabled /> Every Thursday</span>
                        <span class="me-2"><input type="checkbox" value="5" name="repeatdays" class="me-1 disable" disabled /> Every Friday</span>
                        <span><input type="checkbox" value="6" class="me-1 disable" name="repeatdays" disabled /> Every Saturday</span>
                    </div>
                    <div class="form-floating mt-3">
                        <select asp-for="repeatcount" class="form-select disable shadow-none" id="floatingSelect" aria-label="Floating label select example" disabled>
                            <option value="1" selected>1-times</option>
                            <option value="2" selected>2-times</option>
                            <option value="3" selected>3-times</option>
                            <option value="4" selected>4-times</option>
                            <option value="5" selected>5-times</option>
                        </select>
                        <label for="floatingSelect" class="text-info">
                            Repeat End
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-info text-white shadow-none">Save</button>
                    <button type="button" class="btn btn-outline-info shadow-none" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>




@* view Shift Modal*@
<div class="modal fade" id="viewShiftModal" tabindex="-1" aria-labelledby="addShiftModalLabel1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h1 class="modal-title fs-5" id="addShiftModal1Label">View Shift</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input id="shiftidviewmodel" type="number" asp-for="shiftdetailsid" hidden />

                <div class="form-floating">
                    <select class="form-select" id="viewshiftregion" disabled>
                        @foreach (var obj in Model.regions)
                        {
                            <option value="@obj.Regionid">@obj.Name</option>
                        }
                    </select>
                    <label for="floatingSelect" class="text-info">
                        Region
                    </label>
                </div>

                <div class="form-floating">
                    <select class="form-select mt-4" id="viewshiftphysicianname" style="height:58px" disabled>
                    </select>
                    <label for="floatingSelect" class="text-info">
                        Physician
                    </label>
                </div>

                <div class="form-floating mt-3">
                    <input type="date" class="form-control" id="viewshiftshiftdate" placeholder="Date" disabled>
                    <label for="floatingInput">Shift Date</label>
                </div>

                <div class="row row-cols-md-2 row-cols-sm-1 row-cols-1 mt-3">
                    <div class="col mb-3 mb-md-0">
                        <div class="form-floating">
                            <input type="time" class="form-control" id="viewshiftstartdate" asp-for="starttime" placeholder="Date" disabled />
                            <label for="floatingInput">Start</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            <input type="time" class="form-control" id="viewshiftenddate" asp-for="endtime" placeholder="Date" disabled />
                            <label for="floatingInput">End</label>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-info text-white" id="returnviewshift" value="return">Return</button>
                    <button type="button" class="btn btn-info text-white d-none" id="savebtnviewshiftmodel" value="save">Save</button>
                    <button type="button" class="btn btn-info text-white" id="editbtnviewshiftmodel">Edit</button>
                    <button type="button" class="btn btn-danger text-white" id="deleteviewshift" value="delete">Delete</button>
                </div>

            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

<script src="/js/Scheduling/Scheduling.js" asp-append-version="true"></script>
