@using Services.Viewmodels

@model ProviderData;

@{
    Layout = "header_dashboard";
}

@Html.Partial("notification")


<div class="container" id="providermenudiv">
    <div class="mx-3 mt-3">
        <h3>
            Providers Information
        </h3>
    </div>

    <div class="bg-white rounded m-3 shadow" id="content">
        <div class="p-3 px-4 d-flex justify-content-between">
            <div class="d-flex">
                <select class="form-select shadow-none mt-3 regionfilter_providermenu">
                    <option selected value="0">All Region</option>

                    @foreach (var item in Model.regions)    
                    {
                        <option value="@item.Regionid">@item.Name</option>

                    }
                </select>
            </div>
            <div class="d-flex">
                <button class="p-2px-3mx-2 text-white bg-info rounded border-info d-flex align-items-center">
                    <i class="bi bi-plus-square"></i>
                    <span class="d-none d-lg-block ps-2">Create Provider Account</span>
                </button>
            </div>
        </div>

        <div id="providermenutable">

        </div>

       

    </div>
</div>
