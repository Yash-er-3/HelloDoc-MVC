@using Services.Viewmodels

@{
    Layout = "header_dashboard";
}
@Html.Partial("notification") 


<div class="container-fluid pb-4 px-0 px-lg-5 mt-5 mb-5" id="recordsmaindiv">
    <div class="my-3 d-flex justify-content-between">
        <h4 class="fw-bold">Search Records</h4>

        <button class="btn-info shadow-none rounded-2" id="exportdata_searchrecords" value="download">
            <i class="fa fa-solid fa-share-from-square"></i>
            Export data to Excel
        </button>
    </div>
    <div class="container-fluid shadow px-0 py-2 bg-white rounded-2">

        <div class="p-3">
            <div class="row d-flex gy-2">
                <div class="col-md-3">
                    <div class="dropdown h-100" style="width:clamp(200px, 100%, 100%);">
                        <select name="requeststatus" class="form-select shadow-none border-secondary h-100" id="requeststatusfilter_searchrecords">
                            <option value="0" selected>Select Request Status</option>
                            <option value="1" >NEW</option>
                            <option value="45" >ACTIVE</option>
                            <option value="2" >PENDING</option>
                            <option value="6" >CONCLUDE</option>
                            <option value="378" >TOCLOSE</option>
                            <option value="9" >UNPAID</option>
                            <option value="10" >CLEAR</option>
                            <option value="11" >BLOCK</option>
                           
                        </select>
                    </div>
                </div>
                <div class="col-md-3">

                    <div class="form-floating">
                        <input id="patient_name_searchrecords" class="form-control rounded-1 shadow-none" type="search" placeholder="Search..." aria-label="Search" style="width:clamp(100px, 100%, 100%);">
                        <label class="FloatingInput">Patient Name</label>

                    </div>

                </div>
                <div class="col-md-3">
                    <div class="dropdown h-100" style="width:clamp(200px, 100%, 100%);">
                        <select name="requesttype" class="form-select shadow-none h-100 border-secondary" id="requesttypefilter_searchrecords">
                            <option value="0" selected>Select Request Type</option>
                            <option value="1" >Patient</option>
                            <option value="2" >Family/friend</option>
                            <option value="3" >Business</option>
                            <option value="4" >Concierge</option>
                            
                        </select>

                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-floating">
                        <input id="fromdos_searchrecords" class="form-control rounded-1 me-2 py-2 shadow-none" type="date" placeholder="From Date Of Service" style="width:clamp(100px, 100%, 100%); padding-top:18px !important; ">
                        <label class="FloatingInput" style="padding-top:13px !important">From Date Of Service</label>

                    </div>
                </div>
                <div>
                </div>

            </div>

            <div class="row d-flex gy-2">

                <div class="col-md-3">
                    <div class="form-floating">
                        <input id="todos_searchrecords" class="form-control rounded-1 me-2 py-2 shadow-none" type="date" placeholder="From Date Of Service" style="width:clamp(100px, 100%, 100%);padding-top:18px !important;">
                        <label class="FloatingInput" style="padding-top:13px !important">From Date Of Service</label>

                    </div>
                </div>
                <div class="col-md-3">

                    <div class="form-floating">
                        <input id="provider_name_searchrecords" class="form-control rounded-1 shadow-none" type="search" placeholder="Provider Name" style="width:clamp(100px, 100%, 100%);">
                        <label class="FloatingInput">Provider Name</label>

                    </div>

                </div>

                <div class="col-md-3">

                    <div class="form-floating">
                        <input id="email_searchrecords" class="form-control rounded-1 shadow-none" type="text" placeholder="Email" style="width:clamp(100px, 100%, 100%);">
                        <label class="FloatingInput">Email</label>

                    </div>

                </div>

                <div class="col-md-3">

                    <div class="form-floating">
                        <input id="phone_searchrecords" class="form-control rounded-1 shadow-none" type="text" placeholder="Phone Number" style="width:clamp(100px, 100%, 100%);">
                        <label class="FloatingInput">Phone Number</label>

                    </div>

                </div>


                <div class="d-flex justify-content-end mt-3">
                    <button class="btn btn-outline-info rounded-3 p-2 mx-2 shadow-none" id="clearbtn_searchrecords">
                        Clear
                    </button>

                    <button class="btn-info shadow-none rounded-3" id="searchbtn_searchrecords">
                        Search
                    </button>
                </div>

            </div>
        </div>



        <div id="searchrecordstable" class="table-responsive">

        </div>
    </div>


</div>




<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

<script src="/js/Records/Records.js" asp-append-version="true" ></script>