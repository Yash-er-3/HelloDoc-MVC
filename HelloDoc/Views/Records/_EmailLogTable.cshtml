@using Services.Viewmodels;
@model List<EmailLogViewModel>

@{
    Layout = null;
}

<table class="table">
    <thead style="background-color: rgb(235, 235, 235) ; color: black !important; font-weight:700">
        <tr>
            <th style="width:11.11%">Recipint</th>
            <th style="width:11.11%">Action</th>
            <th style="width:11.11%">Role Name</th>
            <th style="width:11.11%">Email Id</th>
            <th style="width:11.11%">Created Date</th>
            <th style="width:11.11%">Sent Date</th>
            <th style="width:11.11%">Sent</th>
            <th class="text-center" style="width:11.11%">Sent Tries</th>
            <th class="text-center" style="width:11.11%">Confirmation Number</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Recipint</td>
                    <td>@item.Action</td>
                    <td>@item.RoleName</td>
                    <td>@item.Email</td>
                    <td>@item.CreatedDate</td>
                    <td>@item.SentDate</td>
                    <td>@item.Sent[0]</td>
                    <td class="text-center">@item.SentTries</td>
                    <td class="text-center">@item.ConfirmationNumber</td>

                </tr>
            }
        }
    </tbody>
</table>
@if (Model.Count == 0)
{
    <div class="d-flex justify-content-center align-items-center flex-column pb-3">
        <img src="/images/no data gif.gif" style="width:30%; height:30%">
        <h1>
            Record Not Found
        </h1>
    </div>
}