@using Services.Viewmodels

@{
    Layout = "header_dashboard";
}
@Html.Partial("notification");


<div class="container-fluid pb-4 px-0 px-lg-5 mt-5" id="blockhistorymaindiv">
    <div class="my-3 d-flex justify-content-between">
        <h4 class="fw-bold">Block History</h4>

      
    </div>
    <div class="container-fluid shadow px-0 py-2 bg-white">

        <div class="p-3">
            <div class="row d-flex">
               
                <div class="col-md-3">

                    <div class="form-floating">
                        <input id="name_blockhistory" class="form-control rounded-1 shadow-none" type="search" placeholder="Name" aria-label="Search" style="width:clamp(100px, 100%, 100%);">
                        <label class="FloatingInput">Name</label>

                    </div>

                </div>
               
                <div class="col-md-3">
                    <div class="form-floating">
                        <input id="date_blockhistory" class="form-control rounded-1 me-2 py-2 shadow-none" type="date" placeholder="Date" style="width:clamp(100px, 100%, 100%); padding-top:18px !important; ">
                        <label class="FloatingInput" style="padding-top:13px !important">Date</label>

                    </div>
                </div>
               
                <div class="col-md-3">

                    <div class="form-floating">
                        <input id="email_blockhistory" class="form-control rounded-1 shadow-none" type="text" placeholder="Email" style="width:clamp(100px, 100%, 100%);">
                        <label class="FloatingInput">Email</label>

                    </div>

                </div>

                <div class="col-md-3">

                    <div class="form-floating">
                        <input id="phone_blockhistory" class="form-control rounded-1 shadow-none" type="text" placeholder="Phone Number" style="width:clamp(100px, 100%, 100%);">
                        <label class="FloatingInput">Phone Number</label>

                    </div>

                </div>

                <div class="d-flex justify-content-end mt-3">
                    <button class="btn btn-outline-info rounded-3 p-2 mx-2 shadow-none" id="clearbtn_blockhistory">
                        Clear
                    </button>

                    <button class="btn-info shadow-none rounded-3" id="searchbtn_blockhistory">
                        Search
                    </button>
                </div>

            </div>

          
        </div>



        <div id="blockhistorystable" class="table-responsive">
        </div>
    </div>


</div>




<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

<script src="/js/Records/BlockHistory.js" asp-append-version="true"></script>