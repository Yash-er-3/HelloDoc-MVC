@using Services.Viewmodels

@model Services.Viewmodels.VendorViewModel

<div class="table-responsive pt-3">
    <table class="table">
        <thead class="bg-secondary text-white">
            <tr>
                <td>Profession</td>
                <td>Business Name</td>
                <td>Email</td>
                <td>Fax Number</td>
                <td>Phone number</td>
                <td>Business Contact</td>
                <td class="d-flex justify-content-center">Actions</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.healthProfessionallist)
            {

                <tr>
                    <td>
                        @foreach (var obj in Model.healthProfessionalTypelist)
                        {
                            if (obj.Healthprofessionalid == item.Profession)
                            {
                                @obj.Professionname
                            }
                        }

                    </td>
                    <td>@item.Vendorname</td>
                    <td>@item.Email</td>
                    <td>@item.Faxnumber</td>
                    <td>@item.Phonenumber</td>
                    <td>@item.Businesscontact</td>
                    <td class="d-flex justify-content-center">
                        <button value="@item.Vendorid" class="btn btn-outline-info mx-1 editvendor">Edit</button>
                        <button value="@item.Vendorid" class="btn btn-outline-info mx-1 deletevendor">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="/js/Vendor/PartialViewVendor.js"></script>
