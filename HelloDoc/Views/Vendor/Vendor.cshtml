@using Services.Viewmodels

@model Services.Viewmodels.VendorViewModel
@{
    Layout = "header_dashboard";
}
<div class="container-fluid pb-4 px-0 px-lg-5" id="vendormaindiv">
    <div class="my-3">
        <h4 class="fw-bold">Vendor</h4>
    </div>
    <div class="container-fluid shadow py-2 bg-white">
        <div class="d-flex align-items-center justify-content-between row">
            <div class="col-12 col-sm-3 col-xl-2 mb-1 mb-sm-0 ">
                <input id="searchfiltervendor" class="form-control rounded-1 me-2 py-2 shadow-none" type="search" placeholder="Search..." aria-label="Search" style="width:clamp(100px, 100%, 100%);">
            </div>
            <div class="col-12 col-sm-3 col-xl-2 mb-1 mb-sm-0">
                <div class="dropdown d-flex" style="width:clamp(200px, 100%, 100%);">
                    <select name="professionname" class="form-select shadow-none h-100" aria-label="Floating label select example" id="professionnamefilter">
                        <span class="search-icon "></span>
                        <option value="0" selected>All Professionals</option>
                        @foreach (var item in Model.healthProfessionalTypelist)
                        {
                            <option class="professionselect" value="@item.Healthprofessionalid" itemid="@item.Healthprofessionalid">@item.Professionname</option>
                        }
                    </select>

                </div>
            </div>
            <div class="col-12 col-sm-6 col-xl-8 d-flex  justify-content-end">
                <button id="addbusinessvendor" class="btn btn-outline-info"><i class="fa-solid fa-plus pe-1" style="color: #0dcaf0;"></i>Add Business</button>
            </div>
        </div>

        <div id="vendortablediv">

        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

<script src="/js/Vendor/Vendor.js"></script>



